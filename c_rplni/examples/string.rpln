\ sep s {
    []
    \ c {
        c sep != ?
            [dup.. c] swap drop
        |
            sum(dup) swap drop []
    } (s..)
    len(dup) ?
        sum(dup) swap drop
    |
        drop
    ?!
} =split
\ sep a {
    len(a) ?
        sum([
            \ s { s sep } (a..)
            drop
        ])
    |
        ""
} =join
